<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Propiedades para configuración -->
    <property name="LOG_DIR" value="logs" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />
    <property name="AUDIT_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n" />
    
    <!-- Appender para consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
    
    <!-- Appender para archivo general -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/billetera-virtual.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/billetera-virtual.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- Appender para errores -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>
    
    <!-- Appender para auditoría de transacciones -->
    <appender name="AUDIT_TRANSACTIONS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/audit-transactions.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/audit-transactions.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>365</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${AUDIT_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- Appender para auditoría de autenticación -->
    <appender name="AUDIT_AUTH" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/audit-auth.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/audit-auth.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>365</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${AUDIT_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- Appender para auditoría de acceso a datos -->
    <appender name="AUDIT_DATA" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/audit-data.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/audit-data.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>180</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${AUDIT_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- Appender para rendimiento -->
    <appender name="PERFORMANCE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/performance.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/performance.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- Logger específico para auditoría de transacciones -->
    <logger name="AUDIT.TRANSACTIONS" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_TRANSACTIONS"/>
    </logger>
    
    <!-- Logger específico para auditoría de autenticación -->
    <logger name="AUDIT.AUTH" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_AUTH"/>
    </logger>
    
    <!-- Logger específico para auditoría de datos -->
    <logger name="AUDIT.DATA" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_DATA"/>
    </logger>
    
    <!-- Logger específico para rendimiento -->
    <logger name="PERFORMANCE" level="INFO" additivity="false">
        <appender-ref ref="PERFORMANCE"/>
    </logger>
    
    <!-- Logger para BilleteraService -->
    <logger name="co.edu.uniquindio.poo.proyectofinal_billeteravirtual.Model.BilleteraService" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    
    <!-- Logger para AuthenticationService -->
    <logger name="co.edu.uniquindio.poo.proyectofinal_billeteravirtual.Model.AuthenticationService" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    
    <!-- Logger para DataManager -->
    <logger name="co.edu.uniquindio.poo.proyectofinal_billeteravirtual.Model.DataManager" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    
    <!-- Logger para Controladores -->
    <logger name="co.edu.uniquindio.poo.proyectofinal_billeteravirtual.ViewController" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
    
</configuration>
