<BorderPane prefHeight="764.0" prefWidth="1126.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyectofinal_billeteravirtual.ViewController.EstadisticasController">
   <left>
      <VBox prefHeight="764.0" prefWidth="250.0" style="-fx-background-color: #2E7D32;">
         <children>
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="250.0" text="Billetera Virtual" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Separator prefWidth="200.0" />
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="250.0">
               <children>
                  <Label fx:id="lblNombreUsuario" alignment="CENTER" prefWidth="250.0" text="Nombre de Usuario" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblSaldo" alignment="CENTER" prefWidth="250.0" text="Saldo: $0.00" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Separator prefWidth="200.0" />
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="250.0" spacing="10.0">
               <children>
                  <Button fx:id="btnDashboard" mnemonicParsing="false" onAction="#irADashboard" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4CAF50;" text="Dashboard" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnTransacciones" mnemonicParsing="false" onAction="#irATransacciones" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4CAF50;" text="Transacciones" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnPresupuestos" mnemonicParsing="false" onAction="#irAPresupuestos" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4CAF50;" text="Presupuestos" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnEstadisticas" mnemonicParsing="false" onAction="#mostrarEstadisticas" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #388E3C;" text="Estadísticas" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnReportes" mnemonicParsing="false" onAction="#irAReportes" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4CAF50;" text="Reportes" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="250.0">
               <children>
                  <Button fx:id="btnCerrarSesion" mnemonicParsing="false" onAction="#cerrarSesion" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #F44336;" text="Cerrar Sesión" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </left>
   <center>
      <VBox prefHeight="764.0" prefWidth="876.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="876.0" style="-fx-background-color: #E8F5E9;">
               <children>
                  <Label text="Estadísticas" textFill="#2e7d32">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="876.0" spacing="10.0" style="-fx-background-color: #E8F5E9;">
               <children>
                  <Label text="Período:" textFill="#2e7d32">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cmbPeriodo" prefWidth="150.0" promptText="Seleccionar período" />
                  <Label text="Desde:" textFill="#2e7d32">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="dpFechaInicio" />
                  <Label text="Hasta:" textFill="#2e7d32">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="dpFechaFin" />
                  <Button fx:id="btnActualizar" mnemonicParsing="false" onAction="#actualizarGraficos" style="-fx-background-color: #4CAF50;" text="Actualizar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>
            <TabPane prefHeight="624.0" prefWidth="876.0" tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab text="Gastos por Categoría">
                     <content>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <BarChart fx:id="barChartCategorias" prefHeight="550.0" prefWidth="876.0" title="Gastos por Categoría">
                                <xAxis>
                                  <CategoryAxis label="Categoría" side="BOTTOM" fx:id="xAxisCategorias" />
                                </xAxis>
                                <yAxis>
                                  <NumberAxis fx:id="yAxisCategorias" label="Monto ($)" side="LEFT" />
                                </yAxis>
                              </BarChart>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  <Tab text="Distribución de Gastos">
                     <content>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <PieChart fx:id="pieChartGastos" prefHeight="550.0" prefWidth="876.0" title="Distribución de Gastos" />
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  <Tab text="Tendencia de Gastos">
                     <content>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <LineChart fx:id="lineChartTendencia" prefHeight="550.0" prefWidth="876.0" title="Tendencia de Gastos e Ingresos">
                                <xAxis>
                                  <CategoryAxis label="Fecha" side="BOTTOM" fx:id="xAxisTendencia" />
                                </xAxis>
                                <yAxis>
                                  <NumberAxis fx:id="yAxisTendencia" label="Monto ($)" side="LEFT" />
                                </yAxis>
                              </LineChart>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
         </children>
      </VBox>
   </center>
</BorderPane>
